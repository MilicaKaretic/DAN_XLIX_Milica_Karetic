<Window x:Class="DAN_XLIX_Milica_Karetic.View.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAN_XLIX_Milica_Karetic.View"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="450">
    <Grid>
        <Button Name="btnAddManager"
                Content="Add Manager"
                Height="20"
                Width="80"
                HorizontalAlignment="Left"
                Command="{Binding AddManager, UpdateSourceTrigger=PropertyChanged}"
                Margin="20,0,0,0" />
        <Button Name="btnLogOff"
                Content="Log Off"
                Height="20"
                Width="70"
                HorizontalAlignment="Left"
                Command="{Binding Logoff, UpdateSourceTrigger=PropertyChanged}"
                Margin="20,0,0,80" />
        <Button Content="Add Employee"
                HorizontalAlignment="Left"
                Margin="20,240,0,0"
                VerticalAlignment="Top"
                Command="{Binding AddEmployee, UpdateSourceTrigger=PropertyChanged}"
                Width="75" />
    </Grid>
</Window>
